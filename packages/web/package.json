{
  "name": "@movies-catalog/web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run relay && vite --host",
    "build": "npm run relay && tsc && vite build",
    "preview": "vite preview",
    "relay": "relay-compiler"
  },
  "devDependencies": {
    "relay-compiler": "^14.1.0"
  },
  "relay": {
    "src": "./src/",
    "schema": "./schema.graphql",
    "language": "typescript",
    "eagerEsModules": true,
    "exclude": [
      "**/node_modules/**",
      "**/__mocks__/**",
      "**/__generated__/**"
    ]
  }
}